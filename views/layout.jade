doctype html
html
  head
    title= title
    script(src='/scripts/deps.js')
    script(src='//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js')
    script(src='/scripts/logo.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js')

    link(rel='stylesheet', href='/styles/style.css')
  body
    #container
      #header
        #fancy-logo
          h1 Ryan Jurgensen
          canvas(width="2040", height="100", id="mask")
          canvas(width="20000", height="100", id="background")
          #logo-options
              a(href='#', id="stop-logo") stop it!
              a(href='#') show pictures
              a(href='#', id="reload-logo") randomize
              a(href='#') see code
      block content

    #contact-bar
      #contact-form
        h3 Let's get started #[span.arrow &#10148;]
        input#contactName(type='text', placeholder='Name')
        input#contactEmail(type='text', placeholder='Email')
        textarea#contactMessage(placeholder='Tell me about your project.')
        button Send

    script
      | var logo = new portfolio.ScrollingLogo();

    script(src='/scripts/main.js')