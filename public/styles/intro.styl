full_intro_height = 661px

#intro
  margin 100px 0 40px
  width 100%
  height full_intro_height
  position relative
  overflow hidden

  #intro-image
    height full_intro_height
    position absolute
    z-index 9

  #intro-text-container
    position relative
    z-index 10

  .colored-content
    background linear-gradient(left, rgba(0,0,0,.8) 0%, rgba(255,255,255,0) 50%, rgba(0,0,0,.8) 100%)

    #intro-text
      width 40%
      height full_intro_height
      padding 40px 0 0 20px

      h1
        margin-bottom 35px
        font-size 60px

      h2, h4
        margin-bottom 25px

      h2
        font-size 28px
        line-height 38px

      h4 
        font-size 22px
        line-height 30px

      .button
        display inline-block
        margin 0 10px
        text-decoration none
        background button-color
        border 1px button-border-color
        color white
        text-transform uppercase
        font 16px/18px 'Arvo', sans-serif;
        letter-spacing 1px
        padding 10px 16px
        box-shadow 0px 0px 10px 0px button-border-color
        animation pulsate 2s ease-in-out;
        animation-iteration-count: infinite; 
        animation-fill-mode: both
        animation-direction: alternate
        transition box-shadow 2.5s

        &:first-child
          margin-left 0

+below('tablet-portrait')
  #intro
    margin-top 0px
    height auto

+below('phone-landscape')
  #intro

    #intro-image
      position static
      width 100%
      height auto

    #intro-text-container
      // FIX ME - WHY?!?!
      margin-top -2px
      
      image '/images/slc.png' cover
      position static

      .colored-content
        background rgba(4, 56, 114, 0.61)

      #intro-text
        padding 20px
        width 100%
        height 100%

        h1
          margin-bottom 20px
          font-size 20px
          line-height 26px

        h2, h4
          margin-bottom 14px
          font-size 14px
          line-height 20px

        .buttons
          clearfix()

        .button
          span(1)
          margin 10px 0px
          text-align center   
          font 14px/16px 'Arvo', sans-serif;
          padding 8px 14px

+at('phone-landscape')
  #intro
    #intro-image
      display none

    #intro-text-container
      background-image url('http://res.cloudinary.com/codifex/image/upload/c_crop,g_north,h_1322,w_2820/c_scale,h_661,w_1440/v1412360803/me-src_mtalgk.jpg')
      background-size cover

      .colored-content
        background rgba(0, 0, 0, 0.53)

      #intro-text
        .button
          col(1/2)
          text-align center

+between('tablet-portrait', 'tablet-landscape')
  #intro
    #intro-image, #intro-text, .colored-content
      width auto
      height 600px

    .colored-content
      background linear-gradient(left, rgba(0,0,0,.8) 0%, rgba(255,255,255,0) 100%)

      #intro-text
        width 74%
        padding 40px 0 0 40px

+at('tablet-portrait')
  #intro
    .colored-content
      #intro-text
        h1
          margin-bottom 35px
          font-size 48px
          line-height 54px

        h2, h4
          margin-bottom 30px

        h2
          font-size 26px
          line-height 34px

        h4 
          font-size 24px
          line-height 32px

+at('tablet-landscape')
  #intro
    height auto
    #intro-text
      width 55% !important
