@keyframes pulsate-contact{
  from{
    text-shadow: 1px 0px 4px rgba(0,102,213,0.91);
  }
  to{
    text-shadow: 1px 0px 25px rgba(0,102,213,0.91);
  }
}

#email
  float left
  margin-top -70px
  //text-transform uppercase
  font-size 16px
  display none

  a
    font-weight 800
    color rgb(185, 204, 255)

  .expanded &
    display block

#contact-bar
  fixed bottom -60px left
  width 100%
  padding 0 40px
  background rgba(0,0,0,.9)
  color #F5F5F5
  font-family 'Lato'
  animation bounceInUp 1.4s ease-in-out
  animation-iteration-count: 1; 
  animation-fill-mode: both
  animation-delay: 1s;
  height 100px
  transition .4s height
  z-index 13
  
  &.expanded
    height 200px
    background rgba(0,0,0,1)

    textarea
      height 120px !important

  #contact-form
    center()
    margin 10px 0

    *
      display inline
      vertical-align middle

    input, textarea
      font-size 17px
      height 26px
      font-family 'Lato'

    input
      col(2/10)

    textarea
      col(3/10)

    #contactSend
      col(1/10)
      color white
      border 1px button-border-color
      background-color button-color
      font 16px/18px 'Arvo', sans-serif;
      letter-spacing 1px
      text-transform uppercase
      box-shadow 0px 0px 10px 0px button-border-color
      animation pulsate 2s ease-in-out;
      animation-iteration-count: infinite; 
      animation-fill-mode: both
      animation-direction: alternate
      transition box-shadow 2.5s
      text-align center

    h3
      font-size 18px
      col(2/10)
      //width auto
      background-size 20px 30px
      line-height 26px
      text-transform uppercase
      background-position: left 0px top;
      background-repeat no-repeat
      
      .arrow
        display inline-block
        padding 0 0 4px 5px
        font-size 18px

+below('tablet-portrait')
  #contact-bar
    #contact-form
      h3
        stack()
        text-align center
      form
        stack()
        input, textarea
          col()
          margin-top 10px
        #contactSend
          col(1/3, offset: 2/3)
          text-align center
    &.expanded
      height 430px
      h3 .arrow
        -webkit-transform: rotate(90deg)
        -moz-transform: rotate(90deg)
        -o-transform: rotate(90deg)
        -ms-transform: rotate(90deg)
        transform: rotate(90deg)
        padding 0px !important
        margin 0px 0px 5px 5px
    #email
      position static
      margin-top 5px
      line-height 22px

+at('tablet-portrait')
  #contact-bar
    #contact-form
      h3
        font-size 26px
        line-height 32px
      form
        input
          col(1/2, cycle: 2)
    &.expanded
      height 375px

+at('tablet-landscape')
  #contact-bar
    #contact-form
      h3
        .arrow
          display none
        

