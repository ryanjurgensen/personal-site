large_image_width = 500px;
small_image_width = 250px;

.tile
  margin-bottom 25px
  padding 10px
  box-shadow 0 1px 2px 0 rgba(0, 0, 0, 0.22)
  clearfix()

  img
    float left
    margin-right 30px
    width large_image_width

  h3
    font-size 28px
    margin-bottom 20px
    text-transform uppercase

  p
    margin-bottom 15px
      
  small
    color #777
    font-style italic
    display block
    padding 3px 0
    font-size 14px

  .smaller &
    col(1/2, cycle: 2)
    min-height 270px
    img
      width small_image_width

    h3
      font-size 22px

+at('phone-portrait')
  .tile
    img
      stack()

    .description
      stack()

      h3
        font-size 20px
        margin 20px 0px

    .smaller &
      col()
      min-height auto

+at('phone-landscape')
  .tile
    .description
      h3
        font-size 20px

    .smaller &
      .description
        h3
          margin-top 15px

+between('phone-landscape', 'tablet-portrait')
  .tile
    img
      col(1/2)

    .description
      col(1/2)
      h3
        margin-bottom 15px

    .smaller &
      img
        stack()

      .description
        stack()

+at('tablet-portrait')
  .tile
    .description
      h3
        font-size 26px

    .smaller &
      .description
        h3
          margin-top 25px

+between('tablet-portrait', 'tablet-landscape')
  .tile
    .description
      p
        font-size 18px
        line-height 24px
      small
        font-size 16px
        line-height 22px

+at('tablet-landscape')
  .tile
    .smaller &
      img
        col(1/2)

      .description
        col(1/2)
